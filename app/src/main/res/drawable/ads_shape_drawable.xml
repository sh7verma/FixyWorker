<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <item android:id="@+id/shape">
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
            <size android:width="72dp" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>

    </item>
    <item
        android:id="@+id/corner"
        android:right="@dimen/_60sdp"
        android:bottom="@dimen/_85sdp">
        <shape android:shape="rectangle">

            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:bottomRightRadius="@dimen/_60sdp"  />
            <solid android:color="@color/plumber" />
        </shape>

    </item>
</layer-list>