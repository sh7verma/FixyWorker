            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:text="asdasdasd asdasdasd asdasdasd asdasdasd"
