<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".dialogs.ConfirmOtpDialog">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/white_top_round_solid"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:orientation="vertical">


            <com.app.fixy_worker.customviews.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="@string/confirm_job"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp" />

            <com.app.fixy_worker.customviews.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textColor="@color/grey_color"
                android:text="@string/enter_otp_to_confirm_job_otp"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_stroke_white_solid_corner_round"
                    android:elevation="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.app.fixy_worker.customviews.MaterialEditText
                        android:id="@+id/ed_first"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textSize="@dimen/_15sdp"
                        app:met_hideUnderline="true" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_stroke_white_solid_corner_round"
                    android:elevation="@dimen/_10sdp"

                    android:orientation="horizontal">

                    <com.app.fixy_worker.customviews.MaterialEditText
                        android:id="@+id/ed_second"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"

                        android:textSize="@dimen/_15sdp"
                        app:met_hideUnderline="true" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_stroke_white_solid_corner_round"
                    android:elevation="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.app.fixy_worker.customviews.MaterialEditText
                        android:id="@+id/ed_third"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textSize="@dimen/_15sdp"
                        app:met_hideUnderline="true" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/black_stroke_white_solid_corner_round"
                    android:elevation="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.app.fixy_worker.customviews.MaterialEditText
                        android:id="@+id/ed_fourth"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textSize="@dimen/_15sdp"
                        app:met_hideUnderline="true" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_next"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_grey_disable"
                    android:elevation="@dimen/_5sdp"
                    android:enabled="false"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_next" />
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>